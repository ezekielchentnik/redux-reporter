{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": [2, "never"],
    "indent": [2, 4, { "SwitchCase": 1 }],
    "max-len": [1, 150],
    "no-console": [0],
    "arrow-body-style": ["error", "as-needed"],
    "no-param-reassign": [0],
    "new-cap": [0],
    "react/jsx-closing-bracket-location": [2, "after-props"],
    "react/jsx-indent": [0],
    "react/jsx-indent-props": [0],
    "react/jsx-no-bind": [2, {
      "ignoreRefs": true,
      "allowArrowFunctions": true,
      "allowBind": true
    }],
    "react/jsx-first-prop-new-line": [0]
  },
  "plugins": [
    "babel",
    "react"
  ]
}
